<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
       xmlns:content="http://purl.org/rss/1.0/modules/content/"
       xmlns:wfw="http://wellformedweb.org/CommentAPI/"
       xmlns:dc="http://purl.org/dc/elements/1.1/"
       xmlns:atom="http://www.w3.org/2005/Atom"
       xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
       xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
       xmlns:georss="http://www.georss.org/georss" xmlns:geo="http://www.w3.org/2003/01/geo/wgs84_pos#">
    <title>JesGs.com</title>
    <link>https://{{ env('APP_BLOG_HOST') }}</link>
    <description>The blog of Twin Cities web developer Jessica Green</description>
    <lastBuildDate>{{posts[0].created_at|date('r')}}</lastBuildDate>
    <language>en-US</language>
    <channel>
    {% for post in posts %}

        <item>
            <guid>{{ route('post.single', [post.created_at|date('Y'), post.created_at|date('m'), post.created_at|date('d'), post.slug]) }}</guid>
            <title>{{ post.title }}</title>
            <pubDate>{{ post.created_at|date('r') }}</pubDate>
            <link>{{ route('post.single', [post.created_at|date('Y'), post.created_at|date('m'), post.created_at|date('d'), post.slug]) }}</link>
            <description><![CDATA[{{post.excerpt}}]]></description>
            <author>hello@jessgreen.io</author>
        </item>

    {% endfor %}

    </channel>
</rss>
