<div class="col-md-8 col-md-offset-2">
    <div id="carousel-portfolio" class="pfolio carousel slide" data-ride="carousel" data-interval="false">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-portfolio" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-portfolio" data-slide-to="1"></li>
            <li data-target="#carousel-portfolio" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner" role="listbox">
        {% for item in items %}

            <div class="pfolio--item item{% if loop.index == 1 %} active{% endif %}">
                <div class="vm__xs--bottom-2">
                    <div class="vm__xs--bottom-2">
                        <img src="{{Voyager.image(item.thumbnail('browser-small', 'cover_image'))}}" width="385" height="225" alt="{{item.title}}">
                    </div>
                </div>
                <h3>{{ item.title }}</h3>
            </div>

        {% endfor %}
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-portfolio" role="button" data-slide="prev">
            <i class="fas fa-chevron-left" aria-hidden="true"></i>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-portfolio" role="button" data-slide="next">
            <i class="fas fa-chevron-right" aria-hidden="true"></i>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
