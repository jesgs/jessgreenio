<div class="portfolio__item{{ cycle([' portfolio__item--alt', ''], loop.index) }}">
    {% include 'portfolio/_browser-ui.twig' %}
    {% include 'portfolio/_title.twig' with {title: item.title} %}
    <div class="row">
        <div class="portfolio__item__description vm__xs--bottom-2 col-md-6 col-md-offset-3">
            <p>{{item.excerpt}}</p>
        </div>
    </div>

    <p><a href="{{route('portfolio.single', {slug: item.slug})}}" class="portfolio__item__btn{{ cycle([' portfolio__item__btn--alt', ''], loop.index)}}">View Details</a></p>
</div>
